<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:layout_width="@dimen/showcase_view_width"
    android:layout_height="@dimen/showcase_view_height"
    android:layout_marginTop="100dp"
    android:layout_marginEnd="@dimen/showcase_view_margin_horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/showcase_text_size_title"
        android:textColor="@color/colorWhite"
        android:gravity="right"
        android:text="Meni z opcijami" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/showcase_text_size_detail"
        android:textColor="@color/colorWhite"
        android:gravity="right"
        android:text="\nTukaj lahko najdeš možnosti za:\n- Vzpostavitev povezave z robotom,\n- Kalibracijo senzorja (za vožnjo robota s senzorjem),\n- Rotacijo zaslona (če želiš drugače obrnjen zaslon)" />

</LinearLayout>